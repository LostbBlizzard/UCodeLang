{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build UCApp",
        "osx": {
          "command": "make",
          "args": [
            "UCApp",
            "-j4"
          ]
        },
        "linux": {
          "command": "make",
          "args": [
            "UCApp",
            "-j4"
          ],
          "problemMatcher": ["$gcc"],
        },
        "windows": {
          "command": "msbuild",
          "args": [
            "UCApp/UCApp.vcxproj",
            "-v:m",
            "-maxcpucount",
            "/property:GenerateFullPaths=true"
          ]
        },
        "problemMatcher": [
          "$msCompile"
        ],
        "group": "build"
      },
      {
        "label": "Build UCodeIDE",
        "osx": {
          "command": "make",
          "args": [
            "UCodeIDE",
            "-j4"
          ]
        },
        "linux": {
          "command": "make",
          "args": [
            "UCodeIDE",
            "-j4"
          ],
          "problemMatcher": ["$gcc"],
        },
        "windows": {
          "command": "msbuild",
          "args": [
            "UCApp/UCApp.vcxproj",
            "-v:m",
            "-maxcpucount",
            "/property:GenerateFullPaths=true"
          ]
        },
        "group": "build"
      },
      {
        "label": "Build UCodelangCL",
        "osx": {
          "command": "make",
          "args": [
            "UCodelangCL",
            "-j4"
          ]
        },
        "linux": {
          "command": "make",
          "args": [
            "UCodelangCL",
            "-j4"
          ],
          "problemMatcher": ["$gcc"],
        },
        "windows": {
          "command": "msbuild",
          "args": [
            "UCodelangCL/UCodelangCL.vcxproj",
            "-v:m",
            "-maxcpucount",
            "/property:GenerateFullPaths=true"
          ]
        },
        "group": "build"
      },
      {
        "label": "run UCApp test",
        "command": "./BuildTools/RunTestsLinux64Debug.sh",
        "dependsOn": [
          "Build UCApp"
        ],
        "problemMatcher": [
          "$msCompile"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        },
      },
      {
        "label": "clean",
        "osx": {
          "command": "make",
          "args": [
            "clean"
          ]
        },
        "linux": {
          "command": "make",
          "args": [
            "clean"
          ]
        },
        "windows": {
          "command": "msbuild",
          "args": [
            "UCodeLang.sln /t:Clean"
          ]
        },
        "group": "none"
      },
      {
        "label": "run premake vs2019",
        "command": "VS_2019.bat",
        "group": "none",
      },
      {
        "label": "run premake vs2020",
        "command": "VS_2020.bat",
        "group": "none",
      },
      {
        "label": "Build UCodeWebsite",
        "command": "hugo",
        "group": "build",
      },
      {
        "label": "start UCodeWebsite",
        "command": "hugo server"
      },
      {
        "label": "Build using emscripten",
        "command": "emmake",
        "args": [
          "make",
          "config=debug_web",
          "-j4",
        ],
        "group": "build",
      },
      {
        "label": "Build (UCodeIDE) using emscripten",
        "command": "emmake",
        "args": [
          "make",
          "UCodeIDE",
          "config=debug_web",
          "-j4",
        ],
        "group": "build",
      },
      {
        "label": "Build (UCodeCL) using emscripten",
        "command": "emmake",
        "args": [
          "make",
          "UCodelangCL",
          "config=debug_web",
          "-j4",
        ],
        "group": "build",
      },
      {
        "label": "Build Android",
        "command": "make",
        "args": [
          "config=debug_android",
          "-j4",
        ],
        "group": "build",
      }
    ]
  }